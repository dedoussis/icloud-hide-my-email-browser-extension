{
  "name": "iCloud Hide My Email",
  "description": "Unofficial chromium extension to support iCloud's Hide My Email feature.",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["contentScript.css"]
    }
  ],
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": ["declarativeNetRequest", "storage", "tabs"],
  "host_permissions": [
    "https://idmsa.apple.com/appleauth/auth/*",
    "https://setup.icloud.com/setup/ws/1/*",
    "https://*.icloud.com/v1/hme/*"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
